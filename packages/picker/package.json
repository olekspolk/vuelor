{
  "name": "@vuelor/picker",
  "version": "0.2.0",
  "type": "module",
  "license": "MIT",
  "description": "Vue color picker, built with Reka UI and Tailwind CSS.",
  "homepage": "https://vuelor.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olekspolk/vuelor.git"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:lib && pnpm build:types",
    "build:lib": "vite build",
    "build:types": "vue-tsc -p tsconfig.json",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "type-check": "vue-tsc -p tsconfig.json --noEmit"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "keywords": [
    "ui",
    "vue",
    "nuxt",
    "nuxt-ui",
    "reka-ui",
    "shadcn/vue",
    "tailwindcss",
    "color",
    "color-picker"
  ],
  "peerDependencies": {
    "reka-ui": "^2.5.1",
    "vue": "^3.2.0"
  },
  "dependencies": {
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  }
}
